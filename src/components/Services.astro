---
import { SERVICES } from "../constants";
import Card from "./Card.astro";
import SectionTitle from "./SectionTitle.astro";
---

<section class="max-w-screen-lg mx-auto px-4 mb-36 relative">
	<SectionTitle>Servicios</SectionTitle>
	<ul class="flex flex-wrap gap-6 justify-around">
		{
			SERVICES.map((service) => (
				<Card
					name={service.name}
					desc={service.desc}
					img={service.img}
				/>
			))
		}
	</ul>

	<div class="absolute top-1/3 left-2/4 w-32 h-32 bg-lumna-400/50 blur-3xl">
	</div>
	<div class="absolute top-2/3 left-2/3 w-32 h-32 bg-lumna-600/50 blur-3xl">
	</div>
	<div class="absolute top-3/4 left-1/3 w-32 h-32 bg-lumna-400/50 blur-3xl">
	</div>
</section>
