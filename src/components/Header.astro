---
import { LOGO_IMG } from "../constants";
import ContactButton from "./ContactButton.astro";
import { Image } from "astro:assets";
---

<header class="max-w-screen-xl mx-auto mb-36">
	<div
		class="flex flex-col md:flex-row gap-4 justify-around items-center
		mx-auto md:pt-20 px-2 md:px-10"
	>
		<div
			class="fade-in-button flex flex-col order-2 md:order-1 text-center md:text-start"
		>
			<h1
				id="studio-name"
				class="z-10 mb-4 text-5xl lg:text-7xl font-bold text-lumna-300"
			>
				CÃ¶rvus Studio
			</h1>
			<p class="text-white/50 text-lg md:text-xl mb-6">
				Hazte el tatuaje que mereces, no esperes mas!
			</p>
			<ContactButton />
		</div>

		<Image
			class="fade-in-button w-[30rem] md:max-w-sm lg:max-w-lg z-10 order-1 md:order-2 mt-24"
			src={LOGO_IMG}
			alt="Logo de Corvus Studio"
			format="avif"
		/>
	</div>
</header>

<style>
	@font-face {
		font-family: "Unifraktur Maguntia";
		src: url("/fonts/UnifrakturMaguntia-Regular.ttf");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	#studio-name {
		font-family: "Unifraktur Maguntia", sans-serif;
	}

	
</style>
